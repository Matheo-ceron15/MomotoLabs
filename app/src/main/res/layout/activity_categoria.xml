<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Categoria">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/logotipo"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="0dp"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:src="@drawable/image14"
                />
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/buscador"
                android:queryHint="Search your category"
                android:layout_marginTop="-100dp"
                android:iconifiedByDefault="false"

                />



<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/progaming1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image10"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-80dp">
        <TextView
            android:id="@+id/progaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programing"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:onClick="programing"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_llena"
            android:layout_marginTop="4dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_llena"
            android:layout_marginTop="4dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_llena"
            android:layout_marginTop="4dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/start_basia"
            android:layout_marginTop="4dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/start_basia"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="-50dp">

    <ImageView
        android:id="@+id/webDesing1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mask_group"
        android:onClick="regresar"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-80dp">
        <TextView
            android:id="@+id/webDesing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web Desing"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:onClick="desing"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_llena"
            android:layout_marginTop="4dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_llena"
            android:layout_marginTop="4dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_llena"
            android:layout_marginTop="4dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/start_basia"
            android:layout_marginTop="4dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/start_basia"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>
</LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-35dp">

                <ImageView
                    android:id="@+id/otros1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mask_group1"
                    />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="-50dp">
                        <TextView
                            android:id="@+id/otros"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Otros"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:onClick="desing"/>
                    </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>
<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/botton_navitation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:menu="@menu/botton_navigation"
    android:background="?android:attr/windowBackground"
    />
</RelativeLayout>